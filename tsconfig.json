{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "esnext" ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "out",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "test",
  ]
}
